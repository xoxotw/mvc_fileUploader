@model IEnumerable<Mvc_fileUploader.Models.UploadedFile>

@{
    ViewBag.Title = "UploadedFiles";
}

<h2>UploadedFiles</h2>

<table>
    <tr>
        <td>Name</td>
        <td>Size</td>
        <td>Preview</td>
    </tr>

    @foreach (var file in Model)
    {
        <tr>
            <td>@file.Name</td>
            <td>@file.Size.ToString("0,0")</td>
        </tr>       
    }
        
</table>
